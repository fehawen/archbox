#
# i3status config
#

general {
    colors = true
    output_format = "i3bar"
    color_degraded = "#556074"
    color_good = "#ffffff"
    color_bad = "#ff2548"
    interval = 5
}

order += "path_exists VPN"
order += "ethernet _first_"
order += "battery all"
order += "disk /"
order += "load"
order += "memory"
order += "tztime local"

path_exists VPN {
    path = "/proc/sys/net/ipv4/conf/tun0"
    format = "VPN"
    format_down = ""
}

ethernet _first_ {
    format_up = "IP: %ip"
    format_down = "IP: n/a"
}

battery all {
    format = "%status %percentage %remaining"
}

disk "/" {
    format = "SSD %avail"
}

load {
    format = "CPU %1min"
}

memory {
    format = "RAM %available"
    threshold_degraded = "1G"
    format_degraded = "MEMORY < %available"
}

tztime local {
    format = "%a %d %b %Y %H:%M "
}
